<Project>
    <PropertyGroup>
        <DebugType>full</DebugType>
        <DebugSymbols>true</DebugSymbols>

        <CollectCoverage>true</CollectCoverage>
        <CoverletOutputFormat>json,lcov,cobertura,opencover</CoverletOutputFormat>
        <CoverletOutput Condition="'$(CoverageDirectory)'==''">$([System.IO.Path]::GetDirectoryName($([MSBuild]::GetPathOfFileAbove('Common.Build.props', '$(MSBuildThisFileDirectory)../'))))/coverage/$(MSBuildProjectName.Replace('.', '-'))/</CoverletOutput>
        <CoverletOutput Condition="'$(CoverageDirectory)'!=''">$(CoverletOutputDirectory)/$(MSBuildProjectName.Replace('.', '-'))</CoverletOutput>
    </PropertyGroup>
</Project>
